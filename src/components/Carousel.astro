---
import data from '../data/event.json';
---

<!-- Sección fotos -->
<div class="flex flex-col items-center my-5">
  <h1 class="font-roboto font-semibold text-3xl text-purple-500 mb-3">¡Celebramos mis 15!</h1>
  <img src="/images/camera.gif" alt="Descripción del gif" class="w-20 h-20" />
</div>

<div class="mb-5">
  <!-- Carrusel -->
  <swiper-container class="mySwiper w-40 h-60 sm:w-60 sm:h-80 flex flex-col items-center justify-center" effect="cards" grab-cursor="true">
    <swiper-slide><img src={data.gallery[0]} /></swiper-slide>
    <swiper-slide><img src={data.gallery[1]} /></swiper-slide>
    <swiper-slide><img src={data.gallery[2]} /></swiper-slide>
    <swiper-slide><img src={data.gallery[3]} /></swiper-slide>
    <swiper-slide><img src={data.gallery[4]} /></swiper-slide>
  </swiper-container>
</div>
  

  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>

<style>
    swiper-slide {
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 18px;
      font-size: 22px;
      font-weight: bold;
      color: #fff;
    }
</style>

  