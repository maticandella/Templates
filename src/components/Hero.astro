---
import data from '../data/event.json';

const eventDate = new Date(data.eventDate).toLocaleDateString("es-ES", {
    day: "2-digit",
    month: "2-digit",
    year: "numeric",
  }).replace(/\//g, ".");
---
<section class="relative w-full min-h-screen flex items-center justify-center">
    <img 
      src={data.mainImage} 
      alt="Foto principal" 
      class="absolute w-full h-full object-cover"
    />
  
    <!-- Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/60 to-transparent"></div>
  
    <div class="relative z-10 px-6 py-10 text-center space-y-5 mt-80">
      <div class="flex flex-row justify between items-center gap-4">
        <hr class="h-[40%] w-[25%] mx-auto bg-white">
        <h3 class="text-2xl sm:text-3xl text-white">{eventDate}</h3>
        <hr class="h-[40%] w-[25%] mx-auto bg-white">
      </div>
        
      <div>
        <h1 class="text-5xl sm:text-7xl font-roboto text-white mb-2">{data.title}</h1>
        <h2 class="text-3xl sm:text-4xl font-grotesk text-white">{data.eventTitle}</h2>
      </div>
        <hr class="h-[40%] w-[100%] mx-auto bg-white">

        <div class="flex justify-center p-10">
          <img 
            src="images/flechas.gif" 
            alt="Gif de flechas" 
            class="h-[25%] w-[25%] -rotate-90"
          />
        </div>
    </div>
</section>